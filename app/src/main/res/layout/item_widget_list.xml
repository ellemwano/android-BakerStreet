<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_widget_ingredient"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:gravity="start"
        android:padding="@dimen/small_padding"
        android:textColor="@color/textColorPrimary"
        android:textSize="16sp"
        tools:text="@tools:sample/lorem"/>

    <TextView
        android:id="@+id/tv_widget_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:padding="@dimen/small_padding"
        android:paddingBottom="@dimen/small_vertical_padding"
        android:textColor="@color/textColorPrimary"
        android:textSize="15sp"
        tools:text="@tools:sample/lorem" />

    <TextView
        android:id="@+id/tv_widget_measure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:paddingBottom="@dimen/small_vertical_padding"
        android:paddingEnd="@dimen/small_horizontal_padding"
        android:paddingRight="@dimen/small_horizontal_padding"
        android:paddingTop="@dimen/small_vertical_padding"
        android:textColor="@color/textColorPrimary"
        android:textSize="15sp"
        tools:text="@tools:sample/lorem"/>

</LinearLayout>